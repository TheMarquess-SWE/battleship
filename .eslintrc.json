{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "jest", "import"],
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always", // âœ… require ".js"
        "mjs": "always",
        "jsx": "always"
      }
    ]
  }
}
